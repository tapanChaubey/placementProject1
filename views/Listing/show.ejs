<%layout('/layouts/boilerplate')%>
<div class="row">
    <div class="col-8 offset-3">
        <h3><%=allListings.title%></h3>
    </div>
      <div class="card col-6 offset-3 show-card">
      <img src="<%=allListings.image%>" class="card-img-top show-img"  alt="listing_image">
      <div class="card-body">
      <p class="card-text">
    &#8377; <%=allListings.price.toLocaleString("en-IN")%><br>
    <%=allListings.location%>
    <br>
    <%=allListings.country%>
      </p>
    </div>
  </div>
</div>
<div class="btns">
    <a href="/listing/<%=allListings._id%>/edit" class="btn btn-dark col-1 offset-3 add-btn" >Edit</a>
    <form action="/listing/<%=allListings._id%>?_method=Delete" method="post">
        <button class="btn btn-dark  offset-3 delete-btn">Delete</button>
    </form>
</div>
<div class="col-8 offset-3 mb-3">
  <hr>
  <h3>Leave a reviews</h3>
  <form>
    <div class="mb-3 mt-3">
      <label for="rating" class="form-lable">Rating:</label>
      <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"/>
    </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-lable">Comments:</label>
      <textarea cols="20" rows="5" id="comment" name="review[comment]" class="form-control"></textarea>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
</div>
</div>