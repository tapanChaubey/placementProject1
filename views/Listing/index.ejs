<%layout('/layouts/boilerplate')%>
 <style>
    #filters {
    display: flex;
    flex-wrap: wrap;
    padding: 1rem 0;
    position: relative;
  }
  
  /* Styling for each filter */
  .filter {
    text-align: center;
    margin: 0.5rem;
    flex: 0 1 calc(20% - 1rem); /* 5 filters per row on small screens */
    max-width: 8rem;
    opacity: 0.8;
    transition: opacity 0.3s;
  }
  
  /* Hover effect for filters */
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  
  /* Icon size and alignment */
  .filter i {
    font-size: 1.5rem;
     /* Blue color */
  }
  
  /* Text under the icons */
  .filter p {
    font-size: 0.8rem;
    margin-top: 0.5rem;
    color: #333;
  }
  
  /* Toggle button styling */
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    position: relative;
    margin-top: 1rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .filter {
      flex: 0 1 calc(20% - 1rem); /* 5 filters per row */
    }

    #filters {
      position: relative;
    }

    .display-btn {
      display: block;
      position: absolute;
      bottom: -3rem; /* Positioned below the last row of icons */
      right: 1rem;
      background-color: #007bff;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      cursor: pointer;
      font-size: 0.9rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Subtle shadow */
      transition: background-color 0.3s;
    }

    .display-btn:hover {
      background-color: #0056b3; /* Darker blue on hover */
    }
  }

  @media (max-width: 576px) {
    .filter {
      flex: 0 1 calc(25% - 1rem); /* 4 filters per row on extra small screens */
    }

    .display-btn {
      bottom: -3rem; /* Adjust based on the number of rows */
    }
  }

</style>
<div id="filters">
  <div class="filter">
    <div>
      <i class="fa-solid fa-fire"></i>
    </div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-bed"></i>
    </div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-mountain-city"></i>
    </div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-mountain"></i>
    </div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div>
      <i class="fa-brands fa-fort-awesome"></i>
    </div>
    <p>Castles</p>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-snowflake"></i>
    </div>
    <p>Aractic</p>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-campground"></i>
    </div>
    <p>Camping</p>
  </div>
  
  <div class="filter">
    <div>
      <i class="fa-solid fa-cow"></i>
    </div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div>
      <i class="fa-solid fa-person-swimming"></i>
    </div>
